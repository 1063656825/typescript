{
    "compilerOptions": { //配置的是编译选项
        "target": "es2016", //配置编译目标代码的版本标准
        "module":"commonjs",//配置编译目标使用的模块化标准
        "lib": ["es2016"],//这个是配置ts文件运行的环境
        "outDir": "./dist",
        "strictNullChecks": true,//严格的空类型检查
        "noImplicitUseStrict": true,//编译后不带严格模式
        "esModuleInterop": true,//在es模式下也可以使用费es
        "noEmitOnError": true,//在有报错的情况下不进行编译
        "moduleResolution": "node",//使用node方式进行模块解析
        "strictPropertyInitialization": true,//进行更严格的属性检查
    },
    "include": ["./src"],//配置编译路径
    // "files": ["./src/index.ts"],//这个是配置编译的指定文件，以及其引入的ts
}